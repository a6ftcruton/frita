          </h1>
        </div>
      </div>
  </div><!--/container-->
</div><!--/masthead-->

<!--main-->
<div class="container">
	<div class="row">

      <!--left-->

      <div class="col-md-3" id="leftCol">
        <ul class="nav nav-stacked" id="sidebar">
        	 <% @categories.each do |category| %>
              	<li><a href="#sec<%= category.id %>"><%= category.title %></a></li>
               <% end %>
       </ul>
      </div><!--/left-->


      <!--right-->
       <div class="col-md-9">

    <% @categories.each do |category| %>
