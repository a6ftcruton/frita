</div>
  <div class="row">
    <% category.items.each do |item| %>

    <div class="col-sm-6 col-md-4">
      <div class="thumbnail",  id="menu_items">
        <img src="<%= item.image(:medium) %>", class="img-responsive img-rounded", id="menu_item_pics">
        <div class="caption">
          <h4><%= item.title %></h4>

          <p><a href="#" class="btn btn-primary" role="button">Add to Cart</a> <a href="#" class="btn btn-default disabled" role=""><%= number_to_currency(item.price) %></a></p>
        </div>
      </div>
    </div>
    <% end %>

        </div>
        <% end %>
